---
import FrameLayout from "../layouts/FrameLayout.astro";
---

<FrameLayout title="N/A">
  <section class="wrap">
    <h1>Not Found///////////</h1>
    <p>You are looking for something that does not exist.</p>
    <a href="/">Return Home</a>
  </section>

  <style>
    .wrap {
      min-height: 100dvh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 0 5vw;
      font-family: "ABC Diatype", system-ui, sans-serif;
    }

    h1 {
      margin: 0 0 0.5rem 0;
      font-weight: 700;
      font-size: clamp(28px, 6vw, 56px);
      letter-spacing: -0.03em;
      line-height: 1.1;
    }

    p {
      margin: 0 0 0.75rem 0;
      font-weight: 400;
      font-size: 16px;
      line-height: 1.4;
      max-width: 52ch;
    }

    a {
      width: fit-content;
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid currentColor;
      padding-bottom: 2px;
    }

    a:hover {
      opacity: 0.75;
    }
  </style>
</FrameLayout>
