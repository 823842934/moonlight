---
import FrameLayout from "../layouts/FrameLayout.astro";
---
<FrameLayout title="brandyura">
  <section class="hero">
    <h1 id="logo">brandyura</h1>
  </section>

  <style>
    .hero {
      min-height: 100dvh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 5vw;
      background: transparent;
    }

    h1 {
      font-family: "ABC Diatype", system-ui, sans-serif;
      font-weight: 700;
      font-size: clamp(56px, 16vw, 260px);
      letter-spacing: -0.05em;
      line-height: 1;
      width: 100%;
      text-align: center;
      color: inherit;
      transition: filter 0.25s ease;
      cursor: pointer;
    }

    /* Desktop hover blur only */
    @media (hover: hover) and (pointer: fine) {
      h1:hover {
        filter: blur(2px);
      }
    }

    /* Mobile tap blur class */
    .blur-temp {
      filter: blur(2px);
    }
  </style>

  <script>
    const logo = document.getElementById("logo");

    if (logo) {
      logo.addEventListener("touchstart", (e) => {
        e.preventDefault(); // prevent sticky hover
        logo.classList.add("blur-temp");

        setTimeout(() => {
          logo.classList.remove("blur-temp");
        }, 1000);
      });
    }
  </script>
</FrameLayout>
