---
import FrameLayout from "../layouts/FrameLayout.astro";
---
<FrameLayout title="brandyura">
  <section class="hero">
    <h1>brandyura</h1>
  </section>

  <style>
    .hero {
      min-height: 100svh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: white;
      padding: 0 5vw;
    }

    h1 {
      font-family: "ABC Diatype", system-ui, sans-serif;
      font-weight: 700;
      font-size: clamp(48px, 14vw, 220px);
      letter-spacing: -0.05em;
      line-height: 1;
      width: 100%;
      text-align: center;
    }
  </style>
</FrameLayout>
