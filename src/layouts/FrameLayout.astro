---
const {
  title = "brandyura",
  description = "brandyura",
  ogImage = "/og.png",
} = Astro.props;

const siteUrl = "https://brandyura.com";
const canonical = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageAbs = new URL(ogImage, siteUrl).toString();
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <link rel="canonical" href={canonical} />
  <meta name="description" content={description} />

  <meta property="og:site_name" content="brandyura" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical} />

  <meta property="og:image" content={ogImageAbs} />
  <meta property="og:image:width" content="960" />
  <meta property="og:image:height" content="960" />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:alt" content="brandyura preview" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageAbs} />

  <link rel="icon" href="/favicon.ico" />
  <link rel="preload" href="/fonts/ABCDiatype-Regular.woff" as="font" type="font/woff" crossorigin />
  <link rel="preload" href="/fonts/ABCDiatype-Bold.woff" as="font" type="font/woff" crossorigin />

  <style>
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Regular.woff") format("woff");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Bold.woff") format("woff");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --corner-inset: 22px;
      --corner-size: 28px;
      --spin-ms: 520ms;

      --intro-ms: 800ms;
      --intro-ease: cubic-bezier(.2,.9,.2,1);
      --intro-blur: 18px;
      --intro-scale: 0.985;

      /* ripple timing */
      --cascade-ms: 300ms;
      --cascade-stagger: 60ms;

      /* ripple “from” look */
      --cascade-from-opacity: 0.22;
      --cascade-from-y: 12px;       /* distance AWAY from center item */
      --cascade-from-blur: 1px;

      /* bolding */
      --study-active-weight: 700;
      --study-inactive-weight: 400;
    }

    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #ffffff;
      max-width: 100%;
      overflow-x: hidden;
    }

    body {
      font-family: "ABC Diatype", system-ui, sans-serif;
      color: #000000;
      overflow-x: clip;
    }

    .page-intro-wrap {
      min-height: 100%;
      transition:
        filter var(--intro-ms) var(--intro-ease),
        transform var(--intro-ms) var(--intro-ease);
      will-change: filter, transform;
    }

    .intro-wash {
      position: fixed;
      inset: 0;
      background: #ffffff;
      z-index: 9000;
      pointer-events: none;
      opacity: 0;
      transition: opacity var(--intro-ms) var(--intro-ease);
      will-change: opacity;
    }

    body.is-intro { overflow: hidden; }

    body.is-intro .page-intro-wrap {
      filter: blur(var(--intro-blur));
      transform: scale(var(--intro-scale));
      transform-origin: center;
    }

    body.is-intro .intro-wash { opacity: 1; }

    .corner-plus {
      position: fixed;
      z-index: 9999;
      font-family: "ABC Diatype", system-ui, sans-serif;
      font-weight: 700;
      font-size: var(--corner-size);
      line-height: 1;
      color: #000;
      user-select: none;
      pointer-events: none;
      will-change: transform;
    }

    .corner-plus.tl { top: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.tr { top: var(--corner-inset); right: var(--corner-inset); }
    .corner-plus.bl { bottom: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.br { bottom: var(--corner-inset); right: var(--corner-inset); }

    @keyframes cornerSpin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .corner-plus.spin {
      animation: cornerSpin var(--spin-ms) ease-in-out;
    }

    /* ✅ Ripple in: items move AWAY from the clicked one (up above it, down below it), then settle */
    @keyframes studyRippleIn {
      from {
        opacity: var(--cascade-from-opacity);
        transform: translateY(var(--ripple-y, 0px));
        filter: blur(var(--cascade-from-blur));
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      :root { --intro-ms: 0ms; --spin-ms: 0ms; --cascade-ms: 0ms; --cascade-stagger: 0ms; }
      .intro-wash { display: none; }
    }
  </style>
</head>

<body class="is-intro">
  <div class="corner-plus tl">＋</div>
  <div class="corner-plus tr">＋</div>
  <div class="corner-plus bl">＋</div>
  <div class="corner-plus br">＋</div>

  <div class="intro-wash" aria-hidden="true"></div>

  <div class="page-intro-wrap">
    <slot />
  </div>

  <script is:inline>
    (() => {
      const SPIN_CLASS = "spin";
      const LAST_STUDY_KEY = "brandyura:lastStudyToken";

      const getPluses = () => Array.from(document.querySelectorAll(".corner-plus"));

      const triggerSpin = () => {
        const pluses = getPluses();
        for (const el of pluses) {
          el.classList.remove(SPIN_CLASS);
          void el.offsetWidth;
          el.classList.add(SPIN_CLASS);
        }
      };

      const isStudyTrigger = (el) => {
        const v = el.getAttribute("data-study") || "";
        let val = v;
        try { val = decodeURIComponent(val); } catch {}
        val = val.trim().toLowerCase();
        return val.startsWith("study:") && val.includes("[//");
      };

      const isBackTrigger = (el) => {
        const txt = (el.textContent || "").trim().toLowerCase();
        return txt === "<- back" || txt === "← back" || txt === "back";
      };

      const cssNum = (name, fallback) => {
        const raw = getComputedStyle(document.documentElement).getPropertyValue(name);
        const n = parseFloat(raw);
        return Number.isFinite(n) ? n : fallback;
      };

      const parseStudyToken = (el) => {
        // expects: study:[//000-00006]
        const raw = el.getAttribute("data-study") || "";
        let val = raw;
        try { val = decodeURIComponent(val); } catch {}
        const m = val.match(/\[\/\/([0-9]{3}-[0-9]{5})\]/i);
        return m ? m[1] : null; // e.g. "000-00006"
      };

      const setLastStudyToken = (token) => {
        if (!token) return;
        try { sessionStorage.setItem(LAST_STUDY_KEY, token); } catch {}
      };

      const getLastStudyToken = () => {
        try { return sessionStorage.getItem(LAST_STUDY_KEY); } catch { return null; }
      };

      const animateStudyListRipple = () => {
        const items = Array.from(document.querySelectorAll("[data-study]"))
          .filter((el) => el instanceof HTMLElement && isStudyTrigger(el));

        if (!items.length) return false;

        const lastToken = getLastStudyToken();
        let activeIndex = -1;

        if (lastToken) {
          activeIndex = items.findIndex((el) => parseStudyToken(el) === lastToken);
        }

        // fallback: if we can't find it, just ripple from the top
        if (activeIndex < 0) activeIndex = 0;

        const ms = cssNum("--cascade-ms", 420);
        const stagger = cssNum("--cascade-stagger", 80);
        const fromOpacity = cssNum("--cascade-from-opacity", 0.22);
        const fromY = cssNum("--cascade-from-y", 12);
        const fromBlur = cssNum("--cascade-from-blur", 1);

        const activeWeight = cssNum("--study-active-weight", 700);
        const inactiveWeight = cssNum("--study-inactive-weight", 400);

        items.forEach((el, i) => {
          const dist = Math.abs(i - activeIndex);
          const delay = dist * stagger;

          const isActive = i === activeIndex;

          // reset base visuals
          el.style.animation = "none";
          el.style.opacity = String(isActive ? 1 : fromOpacity);
          el.style.filter = `blur(${isActive ? 0 : fromBlur}px)`;

          // direction: above active goes UP (negative), below goes DOWN (positive)
          let dir = 0;
          if (i < activeIndex) dir = -1;
          if (i > activeIndex) dir =  1;

          // each element gets its own custom start Y via CSS var
          const rippleY = `${dir * fromY}px`;
          el.style.setProperty("--ripple-y", rippleY);

          // force reflow
          void el.offsetWidth;

          // active item can still animate subtly if you want; currently it snaps (clean)
          if (!isActive) {
            el.style.animation = `studyRippleIn ${ms}ms cubic-bezier(.25,.8,.25,1) ${delay}ms forwards`;
            el.addEventListener("animationend", () => {
              el.style.filter = "blur(0)";
            }, { once: true });
          } else {
            // ensure active is crisp
            el.style.opacity = "1";
            el.style.transform = "translateY(0)";
            el.style.filter = "blur(0)";
          }
        });

        return true;
      };

      const triggerRippleAfterBack = () => {
        if (animateStudyListRipple()) return;

        const obs = new MutationObserver(() => {
          if (animateStudyListRipple()) obs.disconnect();
        });

        obs.observe(document.body, { childList: true, subtree: true });
        setTimeout(() => obs.disconnect(), 1200);
      };

      document.addEventListener("click", (e) => {
        const target = e.target;
        if (!target || !target.closest) return;

        const studyEl = target.closest("[data-study]");
        if (studyEl && isStudyTrigger(studyEl)) {
          const token = parseStudyToken(studyEl);
          setLastStudyToken(token);
          triggerSpin();
          return;
        }

        const backEl = target.closest("button, a");
        if (backEl && isBackTrigger(backEl)) {
          triggerSpin();
          triggerRippleAfterBack();
        }
      }, { capture: true });

      document.addEventListener("animationend", (e) => {
        const t = e.target;
        if (t && t.classList && t.classList.contains("corner-plus")) {
          t.classList.remove(SPIN_CLASS);
        }
      }, true);

      requestAnimationFrame(() => {
        requestAnimationFrame(() => {
          document.body.classList.remove("is-intro");
        });
      });
    })();
  </script>
</body>
</html>
