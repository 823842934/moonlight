---
const {
  title = "brandyura",
  description = "brandyura",
  ogImage = "/og.png",
} = Astro.props;

const siteUrl = "https://brandyura.com";
const canonical = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageAbs = new URL(ogImage, siteUrl).toString();
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <link rel="canonical" href={canonical} />
  <meta name="description" content={description} />

  <meta property="og:site_name" content="brandyura" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical} />

  <meta property="og:image" content={ogImageAbs} />
  <meta property="og:image:width" content="960" />
  <meta property="og:image:height" content="960" />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:alt" content="brandyura preview" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageAbs} />

  <link rel="icon" href="/favicon.ico" />
  <link rel="preload" href="/fonts/ABCDiatype-Regular.woff" as="font" type="font/woff" crossorigin />
  <link rel="preload" href="/fonts/ABCDiatype-Bold.woff" as="font" type="font/woff" crossorigin />

  <style>
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Regular.woff") format("woff");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Bold.woff") format("woff");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --corner-inset: 22px;
      --corner-size: 28px;
      --spin-ms: 520ms;

      --intro-ms: 800ms;
      --intro-ease: cubic-bezier(.2,.9,.2,1);
      --intro-blur: 18px;
      --intro-scale: 0.985;

      /* normal top-to-bottom cascade */
      --cascade-ms: 420ms;
      --cascade-stagger: 80ms;

      --cascade-from-opacity: 0.25;
      --cascade-from-y: -10px;
      --cascade-from-blur: 1px;

      /* slash loop speed */
      --slash-ms: 90ms;
    }

    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #ffffff;
      max-width: 100%;
      overflow-x: hidden;
    }

    body {
      font-family: "ABC Diatype", system-ui, sans-serif;
      color: #000000;
      overflow-x: clip;
    }

    /* Intro */
    .page-intro-wrap {
      min-height: 100%;
      transition:
        filter var(--intro-ms) var(--intro-ease),
        transform var(--intro-ms) var(--intro-ease);
      will-change: filter, transform;
    }

    .intro-wash {
      position: fixed;
      inset: 0;
      background: #ffffff;
      z-index: 9000;
      pointer-events: none;
      opacity: 0;
      transition: opacity var(--intro-ms) var(--intro-ease);
      will-change: opacity;
    }

    body.is-intro { overflow: hidden; }

    body.is-intro .page-intro-wrap {
      filter: blur(var(--intro-blur));
      transform: scale(var(--intro-scale));
      transform-origin: center;
    }

    body.is-intro .intro-wash { opacity: 1; }

    /* Corner plus marks */
    .corner-plus {
      position: fixed;
      z-index: 9999;
      font-family: "ABC Diatype", system-ui, sans-serif;
      font-weight: 700;
      font-size: var(--corner-size);
      line-height: 1;
      color: #000;
      user-select: none;
      pointer-events: none;
      will-change: transform;
    }

    .corner-plus.tl { top: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.tr { top: var(--corner-inset); right: var(--corner-inset); }
    .corner-plus.bl { bottom: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.br { bottom: var(--corner-inset); right: var(--corner-inset); }

    @keyframes cornerSpin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .corner-plus.spin {
      animation: cornerSpin var(--spin-ms) ease-in-out;
    }

    /* ✅ Normal cascade (faded -> full) */
    @keyframes studyCascadeIn {
      from {
        opacity: var(--cascade-from-opacity);
        transform: translateY(var(--cascade-from-y));
        filter: blur(var(--cascade-from-blur));
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    /* keeps the animated slashes stable width so the label doesn't jitter */
    .slash-anim {
      display: inline-block;
      width: 2ch;
      text-align: left;
    }

    @media (prefers-reduced-motion: reduce) {
      :root { --intro-ms: 0ms; --spin-ms: 0ms; --cascade-ms: 0ms; --cascade-stagger: 0ms; --slash-ms: 0ms; }
      .intro-wash { display: none; }
    }
  </style>
</head>

<body class="is-intro">
  <div class="corner-plus tl">＋</div>
  <div class="corner-plus tr">＋</div>
  <div class="corner-plus bl">＋</div>
  <div class="corner-plus br">＋</div>

  <div class="intro-wash" aria-hidden="true"></div>

  <div class="page-intro-wrap">
    <slot />
  </div>

  <script is:inline>
    (() => {
      const SPIN_CLASS = "spin";
      const LAST_STUDY_KEY = "brandyura:lastStudyToken";

      const SLASH_FRAMES = ["//", "/\\", "\\/", "\\\\"];

      let slashTimer = null;
      let slashSpan = null;
      let slashWrappedEl = null;
      let slashOriginalText = null;

      const getPluses = () => Array.from(document.querySelectorAll(".corner-plus"));

      const triggerSpin = () => {
        const pluses = getPluses();
        for (const el of pluses) {
          el.classList.remove(SPIN_CLASS);
          void el.offsetWidth;
          el.classList.add(SPIN_CLASS);
        }
      };

      const isStudyTrigger = (el) => {
        const v = el.getAttribute("data-study") || "";
        let val = v;
        try { val = decodeURIComponent(val); } catch {}
        val = val.trim().toLowerCase();
        return val.startsWith("study:") && val.includes("[//");
      };

      const isBackTrigger = (el) => {
        const txt = (el.textContent || "").trim().toLowerCase();
        return txt === "<- back" || txt === "← back" || txt === "back";
      };

      const cssNum = (name, fallback) => {
        const raw = getComputedStyle(document.documentElement).getPropertyValue(name);
        const n = parseFloat(raw);
        return Number.isFinite(n) ? n : fallback;
      };

      const parseStudyTokenFromDataAttr = (el) => {
        const raw = el.getAttribute("data-study") || "";
        let val = raw;
        try { val = decodeURIComponent(val); } catch {}
        const m = val.match(/\[\/\/([0-9]{3}-[0-9]{5})\]/i);
        return m ? m[1] : null; // "000-00006"
      };

      const setLastStudyToken = (token) => {
        if (!token) return;
        try { sessionStorage.setItem(LAST_STUDY_KEY, token); } catch {}
      };

      const getLastStudyToken = () => {
        try { return sessionStorage.getItem(LAST_STUDY_KEY); } catch { return null; }
      };

      const clearLastStudyToken = () => {
        try { sessionStorage.removeItem(LAST_STUDY_KEY); } catch {}
      };

      const stopSlashLoop = () => {
        if (slashTimer) {
          clearInterval(slashTimer);
          slashTimer = null;
        }
        if (slashWrappedEl && typeof slashOriginalText === "string") {
          // restore original label text (no span)
          slashWrappedEl.textContent = slashOriginalText;
        }
        slashSpan = null;
        slashWrappedEl = null;
        slashOriginalText = null;
      };

      const wrapFirstDoubleSlash = (el) => {
        // Wrap the first occurrence of "//" that appears inside "[//"
        // Uses textContent -> rebuild DOM safely (no regex innerHTML risks on links)
        const txt = el.textContent || "";
        const idx = txt.indexOf("[//");
        if (idx === -1) return null;

        const before = txt.slice(0, idx + 1);     // includes "["
        const after = txt.slice(idx + 1);         // starts with "//...."

        if (!after.startsWith("//")) return null;

        // Build: before + span("//") + rest (after without leading "//")
        const rest = after.slice(2);

        el.textContent = ""; // clear
        el.appendChild(document.createTextNode(before));

        const span = document.createElement("span");
        span.className = "slash-anim";
        span.setAttribute("data-slash-anim", "1");
        span.textContent = "//";
        el.appendChild(span);

        el.appendChild(document.createTextNode(rest));
        return span;
      };

      const startSlashLoopOnElement = (el) => {
        stopSlashLoop();

        if (!(el instanceof HTMLElement)) return;

        const txt = el.textContent || "";
        if (!txt.includes("[//")) return;

        slashWrappedEl = el;
        slashOriginalText = txt;

        const span = wrapFirstDoubleSlash(el);
        if (!span) return;

        slashSpan = span;

        const ms = Math.max(0, cssNum("--slash-ms", 90));
        if (ms === 0) {
          span.textContent = "//";
          return;
        }

        let i = 0;
        slashTimer = setInterval(() => {
          i = (i + 1) % SLASH_FRAMES.length;
          if (slashSpan) slashSpan.textContent = SLASH_FRAMES[i];
        }, ms);
      };

      const findStudyLabelForToken = (token) => {
        if (!token) return null;

        // 1) Prefer elements that already have data-study (your system)
        const candidates = Array.from(document.querySelectorAll("[data-study]"))
          .filter((el) => el instanceof HTMLElement)
          .filter((el) => {
            const t = parseStudyTokenFromDataAttr(el);
            return t === token;
          });

        // If the big label is not data-study, we still try a text search fallback:
        // 2) Any element whose text includes: [//TOKEN]
        if (!candidates.length) {
          const needle = `[//${token}]`.toLowerCase();
          const all = Array.from(document.querySelectorAll("h1,h2,h3,p,div,span,a,button,li"))
            .filter((el) => el instanceof HTMLElement);

          for (const el of all) {
            const t = (el.textContent || "").toLowerCase();
            if (t.includes(needle)) return el;
          }
          return null;
        }

        // Heuristic: pick the most “headline-ish” (largest font size)
        let best = candidates[0];
        let bestSize = 0;
        for (const el of candidates) {
          const size = parseFloat(getComputedStyle(el).fontSize) || 0;
          if (size > bestSize) {
            bestSize = size;
            best = el;
          }
        }
        return best;
      };

      const huntAndStartSlashLoop = () => {
        const token = getLastStudyToken();
        if (!token) return;

        // Try now
        const immediate = findStudyLabelForToken(token);
        if (immediate) {
          startSlashLoopOnElement(immediate);
          return;
        }

        // Otherwise watch briefly for DOM changes (Astro view transitions / client nav)
        const obs = new MutationObserver(() => {
          const el = findStudyLabelForToken(token);
          if (el) {
            obs.disconnect();
            startSlashLoopOnElement(el);
          }
        });

        obs.observe(document.body, { childList: true, subtree: true });
        setTimeout(() => obs.disconnect(), 1500);
      };

      const animateStudyListCascade = () => {
        const items = Array.from(document.querySelectorAll("[data-study]"))
          .filter((el) => el instanceof HTMLElement && isStudyTrigger(el));

        if (!items.length) return false;

        const stagger = cssNum("--cascade-stagger", 80);
        const ms = cssNum("--cascade-ms", 420);

        items.forEach((el, i) => {
          el.style.animation = "none";
          el.style.opacity = String(cssNum("--cascade-from-opacity", 0.25));
          el.style.transform = `translateY(${cssNum("--cascade-from-y", -10)}px)`;
          el.style.filter = `blur(${cssNum("--cascade-from-blur", 1)}px)`;

          void el.offsetWidth;

          const delay = i * stagger;
          el.style.animation = `studyCascadeIn ${ms}ms cubic-bezier(.25,.8,.25,1) ${delay}ms forwards`;

          el.addEventListener("animationend", () => {
            el.style.filter = "blur(0)";
          }, { once: true });
        });

        return true;
      };

      const triggerCascadeAfterBack = () => {
        if (animateStudyListCascade()) return;

        const obs = new MutationObserver(() => {
          if (animateStudyListCascade()) obs.disconnect();
        });

        obs.observe(document.body, { childList: true, subtree: true });
        setTimeout(() => obs.disconnect(), 1200);
      };

      document.addEventListener("click", (e) => {
        const target = e.target;
        if (!target || !target.closest) return;

        const studyEl = target.closest("[data-study]");
        if (studyEl && isStudyTrigger(studyEl)) {
          // store which study was clicked so the next page can animate its label
          const token = parseStudyTokenFromDataAttr(studyEl);
          setLastStudyToken(token);

          triggerSpin();

          // also attempt immediately (works if your UI doesn't navigate)
          // if it navigates, huntAndStartSlashLoop() will run on the next page load
          huntAndStartSlashLoop();
          return;
        }

        const backEl = target.closest("button, a");
        if (backEl && isBackTrigger(backEl)) {
          triggerSpin();

          // stop and restore //
          stopSlashLoop();
          clearLastStudyToken();

          triggerCascadeAfterBack();
        }
      }, { capture: true });

      document.addEventListener("animationend", (e) => {
        const t = e.target;
        if (t && t.classList && t.classList.contains("corner-plus")) {
          t.classList.remove(SPIN_CLASS);
        }
      }, true);

      // Intro + also try slash loop on initial paint (for direct loads on a study page)
      requestAnimationFrame(() => {
        requestAnimationFrame(() => {
          document.body.classList.remove("is-intro");
          huntAndStartSlashLoop();
        });
      });
    })();
  </script>
</body>
</html>
