---
const {
  title = "brandyura",
  description = "brandyura",
  ogImage = "/og.png",
} = Astro.props;

const siteUrl = "https://brandyura.com";
const canonical = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageAbs = new URL(ogImage, siteUrl).toString();
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <link rel="canonical" href={canonical} />
  <meta name="description" content={description} />

  <meta property="og:site_name" content="brandyura" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical} />

  <meta property="og:image" content={ogImageAbs} />
  <meta property="og:image:width" content="960" />
  <meta property="og:image:height" content="960" />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:alt" content="brandyura preview" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageAbs} />

  <link rel="icon" href="/favicon.ico" />
  <link rel="preload" href="/fonts/ABCDiatype-Regular.woff" as="font" type="font/woff" crossorigin />
  <link rel="preload" href="/fonts/ABCDiatype-Bold.woff" as="font" type="font/woff" crossorigin />

  <style>
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Regular.woff") format("woff");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "ABC Diatype";
      src: url("/fonts/ABCDiatype-Bold.woff") format("woff");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --corner-inset: 22px;
      --corner-size: 28px;

      --intro-ms: 800ms;
      --intro-ease: cubic-bezier(.2,.9,.2,1);
      --intro-blur: 18px;
      --intro-scale: 0.985;

      --cascade-ms: 420ms;
      --cascade-stagger: 80ms;
      --cascade-from-opacity: 0.25;
      --cascade-from-y: -10px;
      --cascade-from-blur: 1px;

      /* merge tuning */
      --merge-ms: 820ms;
      --merge-ease: cubic-bezier(.22,.61,.36,1);
      --merge-scale: 2.05;

      --dx-tr: 0px;
      --dy-tr: 0px;
      --dx-br: 0px;
      --dy-br: 0px;
      --fade-delay: 0ms;
    }

    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #ffffff;
      overflow-x: hidden;
    }

    body {
      font-family: "ABC Diatype", system-ui, sans-serif;
      color: #000000;
    }

    .page-intro-wrap {
      min-height: 100%;
      transition: filter var(--intro-ms) var(--intro-ease), transform var(--intro-ms) var(--intro-ease);
    }

    .intro-wash {
      position: fixed;
      inset: 0;
      background: #ffffff;
      z-index: 9000;
      pointer-events: none;
      opacity: 0;
      transition: opacity var(--intro-ms) var(--intro-ease);
    }

    body.is-intro { overflow: hidden; }
    body.is-intro .page-intro-wrap {
      filter: blur(var(--intro-blur));
      transform: scale(var(--intro-scale));
    }
    body.is-intro .intro-wash { opacity: 1; }

    .corner-plus {
      position: fixed;
      z-index: 9999;
      font-weight: 700;
      font-size: var(--corner-size);
      pointer-events: none;
      transform-origin: center;
      transition:
        transform var(--merge-ms) var(--merge-ease) 20ms,
        opacity 120ms var(--merge-ease);
    }

    .corner-plus.tl { top: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.tr { top: var(--corner-inset); right: var(--corner-inset); }
    .corner-plus.bl { bottom: var(--corner-inset); left: var(--corner-inset); }
    .corner-plus.br { bottom: var(--corner-inset); right: var(--corner-inset); }

    body.plus-merged .corner-plus.tl,
    body.plus-merged .corner-plus.bl {
      transform: rotate(360deg) scale(var(--merge-scale));
    }

    body.plus-merged .corner-plus.tr {
      transform: translate3d(var(--dx-tr), var(--dy-tr), 0) rotate(360deg) scale(var(--merge-scale));
      opacity: 0;
      transition-delay: 0ms, var(--fade-delay);
    }

    body.plus-merged .corner-plus.br {
      transform: translate3d(var(--dx-br), var(--dy-br), 0) rotate(360deg) scale(var(--merge-scale));
      opacity: 0;
      transition-delay: 0ms, var(--fade-delay);
    }

    @keyframes studyCascadeIn {
      from {
        opacity: var(--cascade-from-opacity);
        transform: translateY(var(--cascade-from-y));
        filter: blur(var(--cascade-from-blur));
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }
  </style>
</head>

<body class="is-intro">
  <div class="corner-plus tl">＋</div>
  <div class="corner-plus tr">＋</div>
  <div class="corner-plus bl">＋</div>
  <div class="corner-plus br">＋</div>

  <div class="intro-wash"></div>
  <div class="page-intro-wrap"><slot /></div>

  <script is:inline>
    (() => {
      const root = document.documentElement;
      const get = (s) => document.querySelector(s);
      const getPluses = () => ({
        tl: get(".corner-plus.tl"),
        tr: get(".corner-plus.tr"),
        bl: get(".corner-plus.bl"),
        br: get(".corner-plus.br"),
      });

      const setMergeVars = () => {
        const { tl, tr, bl, br } = getPluses();
        const rTL = tl.getBoundingClientRect(), rTR = tr.getBoundingClientRect();
        const rBL = bl.getBoundingClientRect(), rBR = br.getBoundingClientRect();
        root.style.setProperty("--dx-tr", `${(rTL.left - rTR.left)}px`);
        root.style.setProperty("--dy-tr", `${(rTL.top - rTR.top)}px`);
        root.style.setProperty("--dx-br", `${(rBL.left - rBR.left)}px`);
        root.style.setProperty("--dy-br", `${(rBL.top - rBR.top)}px`);
        root.style.setProperty("--fade-delay", `${parseFloat(getComputedStyle(root).getPropertyValue("--merge-ms")) * 0.92}ms`);
      };

      const merge = () => {
        setMergeVars();
        document.body.classList.remove("plus-merged");
        void document.body.offsetWidth;
        requestAnimationFrame(() => requestAnimationFrame(() => document.body.classList.add("plus-merged")));
      };

      const unmerge = () => document.body.classList.remove("plus-merged");

      document.addEventListener("click", (e) => {
        const t = e.target;
        if (t.closest("[data-study]")) merge();
        if (t.closest("a,button")?.textContent?.toLowerCase().includes("back")) unmerge();
      }, true);

      requestAnimationFrame(() => requestAnimationFrame(() => document.body.classList.remove("is-intro")));
    })();
  </script>
</body>
</html>
